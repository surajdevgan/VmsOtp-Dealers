<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/camera_view"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:id="@+id/cresult"
        />



    <com.budiyev.android.codescanner.CodeScannerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/scanner_view"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/logoscrn"
        android:layout_gravity="center"
        android:background="@drawable/medipro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/versiontxt"
        android:text="V 7.0"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logoimg"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#Fff"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="italic"
        android:id="@+id/namenn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/wname"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="300dp"
        app:riv_border_width="4dip"
        app:riv_border_color="#Ffff"
        app:riv_mutate_background="true"
        android:visibility="gone"
        android:id="@+id/imgview"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:riv_corner_radius="30dip"
        android:layout_height="350dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txtResult"
        />

    <EditText
        android:layout_width="300dp"
        android:hint="Enter Admin ID Here"
        android:textColorHint="#fff"
        android:textStyle="bold"
        android:maxLength="12"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="textCapCharacters"
        android:id="@+id/editser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:id="@+id/tvssss"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="This is For Dealers/Users"
        />

    <Button
        android:id="@+id/chooseImage"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"


        android:backgroundTint="#757575"
        android:onClick="ChoosePhoto"

        android:padding="5dp"
        android:text="Scan Qr Using Camera"
        android:textColor="#fff" />



    <Button
        android:id="@+id/chooseImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#757575"
        android:onClick="ChoosePhotoSecondCam"
        android:padding="5dp"
        android:text="Scan Qr Using Camera 2"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:id="@+id/tvs"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="OR"
        />

    <Button
        android:id="@+id/gntprnt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:backgroundTint="#757575"
        android:visibility="gone"
        android:onClick="GeneratePrint"

        android:padding="5dp"
        android:text="Enter Print Id Here"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:id="@+id/tvs1"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="OR"
        />

    <Button
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:textColor="#10161D"
        android:layout_marginTop="10dp"
        android:backgroundTint="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:visibility="gone"
        android:onClick="generate"
        android:background="@drawable/button"
        android:text="Generate Service OTP"
        android:id="@+id/scanservice"
        />



    <Button
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="45dp"

        android:textColor="#fff"
        android:onClick="btnScan"
        android:background="@drawable/button"
        android:text="Scan &amp; Share"
        android:id="@+id/scan"
        />



    <Button
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:onClick="SelectImg"
        android:layout_gravity="center"

        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:id="@+id/slectimg"
        android:text="Choose code from Gallery"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/remainpc"
        android:textColor="#fff"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >



    </RelativeLayout>





</LinearLayout>
